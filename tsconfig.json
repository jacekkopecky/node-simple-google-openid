{
  "compilerOptions": {
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "target": "es2020",
    "moduleResolution": "node",
    "module": "CommonJS",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "lib"
  ]
}
